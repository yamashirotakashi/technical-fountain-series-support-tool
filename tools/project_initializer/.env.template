# 技術の泉シリーズプロジェクト初期化ツール - 環境変数設定テンプレート
# このファイルを .env にリネームして使用してください

# Slack API設定
SLACK_BOT_TOKEN=xoxb-your-bot-token-here
SLACK_USER_TOKEN=xoxp-your-user-token-here

# GitHub App招待用の別Bot（技術の泉シリーズ招待Bot）
SLACK_INVITATION_BOT_TOKEN=xoxb-your-invitation-bot-token-here

# GitHub API設定
GITHUB_ORG_TOKEN=ghp_your-github-token-here

# Google Sheets API設定
# service_account.json ファイルを config/ フォルダに配置してください

# デバッグ設定
DEBUG=false
LOG_LEVEL=INFO

# アプリケーション設定
APP_VERSION=1.0.0
APP_TITLE=技術の泉シリーズプロジェクト初期化ツール v1.0.0

# ネットワーク設定
REQUEST_TIMEOUT=30
MAX_RETRIES=3

# UI設定
WINDOW_WIDTH=1000
WINDOW_HEIGHT=700
THEME=default